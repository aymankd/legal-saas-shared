{
  "name": "@legal-saas/legal-saas-lib",
  "version": "0.2.4",
  "description": "A shared library for legal SaaS applications",
  "license": "MIT",
  "author": "aymankaddioui",
  "repository": {
    "type": "git",
    "url": "https://github.com/aymankd/legal-saas-shared.git"
  },
  "bugs": {
    "url": "https://github.com/aymankd/legal-saas-shared/issues"
  },
  "homepage": "https://github.com/aymankd/legal-saas-shared#readme",
  "keywords": [
    "legal",
    "saas",
    "library",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "prepare": "tsup",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "eslint src --ext .ts"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "size-limit": "^11.2.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af"
}
